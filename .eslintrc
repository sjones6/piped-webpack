{
	root: true,
	parserOptions: {
		ecmaVersion: 6,
		sourceType: "module"
	},
	env: {
		node: true
	},
	extends: ["eslint:recommended"],
	rules: {
		"no-console": [0],

		// error catching
		"array-callback-return": [2],
		"default-case": [2],
		"eqeqeq": [2],
		"guard-for-in": [2],
		"no-array-constructor": [2],
		"no-caller": [2],
		"no-catch-shadow": [2],
		"no-else-return": [2],
		"no-eval": [2],
		"no-extend-native": [2],
		"no-extra-label": [2],
		"no-floating-decimal": [2],
		"no-implicit-coercion": [2, {"allow": ["!!"]}],
		"no-implied-eval": [2],
		"no-lonely-if": [2],
		"no-multi-assign": [2],
		"no-nested-ternary": [2],
		"no-new-func": [2],
		"no-new-object": [2],
		"no-param-reassign": [1],
		"no-return-assign": [2],
		"no-return-await": [2],
		"no-script-url": [2],
		"no-shadow": [2],
		"no-shadow-restricted-names": [2],
		"no-self-compare": [2],
		"no-sequences": [2],
		"no-template-curly-in-string": [1],
		"no-throw-literal": [2],
		"no-undef-init": [2],
		"no-unmodified-loop-condition": [2],
		"no-unneeded-ternary": [2],
		"no-unused-expressions": [2, {"allowShortCircuit": true}],
		"no-use-before-define": [2, {"functions": false}],
		"no-useless-call": [2],
		"no-useless-concat": [2],
		"no-useless-escape": [2],
		"no-void": [2],
		"radix": [2],
		"require-await": [2],

		// style guide
		"array-bracket-spacing": [2],
		"block-spacing": [2],
		"brace-style": [2, "1tbs", {"allowSingleLine": true}],
		"comma-dangle": [2, "always-multiline"],
		"comma-spacing": [2],
		"comma-style": [2],
		"computed-property-spacing": [2],
		"curly": [2, "multi-line"],
		"dot-location": [2, "property"],
		"dot-notation": [2],
		"eol-last": [2],
		"func-call-spacing": [2],
		"indent": [2, "tab", {
			"outerIIFEBody": 0,
			"FunctionDeclaration": {
				"body": 1,
				"parameters": 1,
			},
			"FunctionExpression": {
				"body": 1,
				"parameters": 1,
			},
			"CallExpression": {
				"arguments": 1,
			},
		}],
		"key-spacing": [2],
		"keyword-spacing": [2, {
			"overrides": {
				// no space before brace
				"case": {"before": false, "after": false},
				"catch": {"before": false, "after": false},
				"class": {"before": false, "after": false},
				"default": {"after": false},
				"do": {"before": false, "after": false},
				"else": {"before": false, "after": false},
				"finally": {"before": false, "after": false},
				"for": {"before": false, "after": false},
				"function": {"before": false, "after": false},
				"if": {"before": false, "after": false},
				"switch": {"before": false, "after": false},
				"try": {"before": false, "after": false},
				"while": {"before": false, "after": false},
				"with": {"before": false, "after": false},
			},
		}],
		"semi-style": [2],
		"padding-line-between-statements": [
			2,
			{ "blankLine": "always", "prev": "directive", "next": "*" },
			{ "blankLine": "always", "prev": "*", "next": "return" }
		],
		"switch-colon-spacing": [2],
		"max-nested-callbacks": [1],
		"new-parens": [2],
		"no-multi-spaces": [2],
		"no-trailing-spaces": [2],
		"no-whitespace-before-property": [2],
		"operator-linebreak": [2, "before"],
		"quote-props": [2, "as-needed"],
		"quotes": [2, "single"],
		"semi": [2],
		"space-before-blocks": [2, {"functions": "never", "keywords": "never", "classes": "always"}],
		"space-before-function-paren": [2, "never"],
		"space-in-parens": [2],
		"space-unary-ops": [2, {
			"words": true,
			"nonwords": false,
		}],
		"spaced-comment": [2, "always", {"exceptions": ["*"]}],

		// es6
		"arrow-spacing": [2],
		"no-useless-rename": [2],
	},
}
